{
  "name": "book-fairy",
  "packageManager": "yarn@4.5.0",
  "private": true,
  "os": [
    "linux"
  ],
  "type": "module",
  "cpu": [
    "x64"
  ],
  "workspaces": [
    "prd/*",
    "lib/*",
    "dev/*",
    "tooling"
  ],
  "engines": {
    "node": "22.8.0"
  },
  "scripts": {
    "mprocs": "yarn tooling:mprocs",
    "build": "yarn workspaces foreach -A run nix-build",
    "postinstall": "yarn run build"
  }
}
